<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('../partials/head', {title: 'Todos los productos'}) %>
	<body>
		<!-- Header -->
		<%- include('../partials/headerNavbar') %>
			<!-- /Header -->
			<!-- todos los productos -->
			<div class="container container-wrapper">
				<div class="row">
					<div class="col-12">
						<h2 class="products-title">Todos los productos</h2>
					</div>
					<% products.forEach(p=> {%>
						<div class="col-12 col-sm-6 col-lg-3">
							<section class="product-box">
								<a href="/productos/detalle/<%= p.id %>">
									<figure class="product-box_image">
										<img src="/images/products/<%= p.image %>" alt="">
									</figure>
									<article class="product-box_data">
										<h2>$<%= toThousand(p.price) %>
										</h2>
										<span>
											<%= p.discount %> % OFF
										</span>
										<!-- precio final -->
										<p>
											<%= p.name %>
										</p>
										<i class="fas fa-truck"></i>
									</article>
								</a>
							</section>
						</div>
						<%})%>
				</div>
			</div>
			<!-- /todos los productos -->
			<!-- footer -->
			<%- include('../partials/footer') %>
				<!-- /footer -->
				<!-- scripts -->
				<%- include("../partials/scripts") %>
					<!-- /scripts -->
	</body>
</html>